<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://picsum.photos/seed/picsum/900/1440);">
  <div class="container">
     <h1><%= @office.name%></h1>
  </div>
</div>

<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h2><%= @office.name %></h2>
    <p>Description: <%= @office.description%></p>
    <p>Address: <%= @office.address%></p>

  </div>
</div>

<br>

<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h2>Additional infos: </h2>
    <p>Table_num: <%= @office.table_num%></p>
    <p>Wifi: <%= @office.wifi%></p>
    <p>Amenities: <%= @office.amenities%></p>
  </div>
</div>

<br>
<div class="d-flex justify-content-center">
    <%= link_to 'Back to overview', offices_path, class: 'btn btn-secondary btn-lg btn-block'%>
</div>

<% if policy(@office).edit? %>
    <%= link_to "Update", edit_office_path(@office) %>
  <% end %>
